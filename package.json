{
    "name": "qa-playwright-portfolio",
    "private": true,
    "version": "20251113.0115",
    "description": "Comprehensive QA test automation portfolio showcasing Playwright testing capabilities with React applications, including UI testing, authentication flows, email verification, API testing, and CI/CD integration",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "prebuild": "chmod +x scripts/update-version.sh && ./scripts/update-version.sh",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "test": "playwright test",
        "test:dev": "playwright test --config=playwright.config.ts",
        "test:prod": "playwright test --config=playwright.config.prod.ts",
        "test:prod-local": "npm run build && npm run preview & sleep 3 && playwright test --config=playwright.config.prod.ts --base-url=http://localhost:4173",
        "test:ui": "playwright test --ui",
        "test:headed": "playwright test --headed",
        "test:debug": "playwright test --debug",
        "test:report": "playwright show-report",
        "qa:pipeline": "./scripts/qa-pipeline-dev-first.sh",
        "deploy:dev-first": "./scripts/qa-pipeline-dev-first.sh",
        "deploy:check": "./scripts/qa-workflow.sh",
        "version:update": "./scripts/update-version.sh",
        "push:dev": "./scripts/push-dev.sh",
        "push:prod": "./scripts/push-prod.sh",
        "version:generate": "./scripts/generate-version.sh"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "js-cookie": "^3.0.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.8.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.56.1",
        "@types/js-cookie": "^3.0.6",
        "@types/node": "^24.10.1",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@vitejs/plugin-react": "^4.2.1",
        "dotenv": "^16.3.1",
        "eslint": "^8.55.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "typescript": "^5.2.2",
        "vite": "^5.0.8"
    }
}