# Environment Variables Template
# Copy this file to .env or .env.development for local development
# Copy this file to .env.production for production testing

# Application Base URL
BASE_URL=http://localhost:3000

# Node Environment (development/production)
NODE_ENV=development

# Test User Credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=password123

# Mailinator API Configuration
MAILINATOR_API_TOKEN=your_api_token_here
MAILINATOR_DOMAIN=mailinator.com

# Playwright Test Configuration
HEADLESS=true
WORKERS=2
SLOW_MO=0
TIMEOUT=30000
VIDEO_MODE=retain-on-failure
SCREENSHOT_MODE=only-on-failure
RETRIES=2

# Vite Build Configuration (optional)
# VITE_APP_TITLE=QA Playwright Portfolio
# VITE_APP_VERSION=1.0.0
