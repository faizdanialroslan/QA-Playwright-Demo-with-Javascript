# Environment Variables for Test Automation
# Copy this file to .env and update the values

# Application Configuration
BASE_URL=http://localhost:3000
NODE_ENV=test

# Authentication Test Credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=password123

# Mailinator Configuration for Email Verification Tests
MAILINATOR_API_TOKEN=your_mailinator_api_token_here
MAILINATOR_DOMAIN=mailinator.com

# CI/CD Configuration
CI=false
GITHUB_ACTIONS=false

# Test Configuration
HEADLESS=true
SLOW_MO=0
TIMEOUT=30000

# Video and Screenshot Configuration  
VIDEO_MODE=retain-on-failure
SCREENSHOT_MODE=only-on-failure

# Parallel Execution Configuration
WORKERS=4
RETRIES=2
